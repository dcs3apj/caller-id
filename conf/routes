# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.Home.index
GET     /index.html                 controllers.Home.index
GET     /unauthorised.html          controllers.Home.unauthorised
POST    /contacts                   controllers.Home.updateContacts
POST    /call                       controllers.Home.sendToModem

GET         /authenticate          controllers.SocialAuthController.authenticate
POST        /authenticate          controllers.SocialAuthController.authenticate
GET         /oauth2callback        controllers.SocialAuthController.authenticate
GET         /signOut               controllers.SocialAuthController.signOut

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

