# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                       controllers.Application.index
POST        /modem                  controllers.ModemResponseController.push
POST        /user/:email/contacts   controllers.ContactsController.addContact(email)
DELETE      /user/:email/contacts   controllers.ContactsController.deleteContacts(email)
PUT         /user/:email            controllers.UserController.user(email)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
